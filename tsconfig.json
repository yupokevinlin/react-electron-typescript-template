{
  "compileOnSave": true,
  //Compiler Options Documentation: https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "esnext"
    ],
    "allowJs": false,
    "jsx": "react",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node", "webpack-env", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src"
  ]
}